<h1>Редактирование карточки</h1>
 
<%= form_for :card, url: card_path(@card), method: :patch do |f| %>
 
  <% if @card.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@card.errors.count, "error") %> карточка не может быть сохранена:
      </h2>
      <ul>
        <% @card.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :original_text %><br>
    <%= f.text_field :original_text %>
  </p>
 
  <p>
    <%= f.label :translated_text %><br>
    <%= f.text_field :translated_text %>
  </p>

  <p>
    <%= f.label :review_date %><br>
    <%= f.date_field :review_date %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Назад к списку карточек', cards_path %>