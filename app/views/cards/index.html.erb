<h1>Список карточек</h1>
<table>
  <tr>
    <th>Оригинал</th>
    <th>Перевод</th>
    <th>Дата</th>
  </tr>
  <% @cards.each do |card| %>
    <tr>
      <td><%= card.original_text %></td>
      <td><%= card.translated_text %></td>
      <td><%= card.review_date.strftime("%d/%m/%Y")%></td>
      <td><%= link_to 'Просмотреть', card_path(card) %></td>
      <td><%= link_to 'Редактировать', edit_card_path(card) %></td>
      <td><%= link_to 'Удалить', card_path(card), method: :delete,data: {
        confirm: 'Вы уверены?' } %></td>
    </tr>
  <% end %>
</table>

